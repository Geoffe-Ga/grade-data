[importlinter]
root_package = grade_data

[importlinter:contract:layers]
name = Enforce layered architecture
type = layers
layers =
    presentation
    application
    domain
    infrastructure

[importlinter:contract:independence]
name = Domain layer independence
type = forbidden
source_modules =
    grade_data.domain
forbidden_modules =
    grade_data.presentation
    grade_data.application
    grade_data.infrastructure

[importlinter:contract:no-cycles]
name = Prevent circular dependencies
type = independence
modules =
    grade_data
